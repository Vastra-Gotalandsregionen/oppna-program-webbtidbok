<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <import resource="testdata-su.xml"/>

    <bean id="businessObjectHolder"
        class="se.vgregion.webbtidbok.mock.sectraws.BusinessObjectHolder">
        <constructor-arg ref="SU_sections" />
        <constructor-arg ref="SU_timeblocks" />
        <constructor-arg ref="SU_bookings" />
    </bean>

	<bean id="rescheduleEndpoint"
		class="se.vgregion.webbtidbok.mock.sectraws.RescheduleEndpoint">
		<constructor-arg ref="businessObjectHolder" />
		<constructor-arg ref="jaxbMarshaller" />
	</bean>

	<bean id="jaxbMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
		<property name="contextPath"
			value="se.vgregion.webbtidbok.mock.sectraws.jaxb" />
	</bean>

	<bean
		class="org.springframework.ws.server.endpoint.mapping.PayloadRootQNameEndpointMapping">
		<property name="mappings">
			<props>
				<prop key="{http://tempuri.org/}GetBookingInfo">rescheduleEndpoint</prop>
                <prop key="{http://tempuri.org/}GetBookings">rescheduleEndpoint</prop>
                <prop key="{http://tempuri.org/}ListFreeDays">rescheduleEndpoint</prop>
                <prop key="{http://tempuri.org/}ListFreeTimes">rescheduleEndpoint</prop>
                <prop key="{http://tempuri.org/}ListSections">rescheduleEndpoint</prop>
                <prop key="{http://tempuri.org/}Reschedule">rescheduleEndpoint</prop>
			</props>
		</property>
		<property name="interceptors">
			<bean
				class="org.springframework.ws.server.endpoint.interceptor.PayloadLoggingInterceptor" />
		</property>
	</bean>

	<!--
		The id of the bean is used for the WSDL-location for Spring. Eg.
		/ws/unitDetails.wsdl
	-->
	<bean id="booking"
		class="org.springframework.ws.wsdl.wsdl11.SimpleWsdl11Definition">
        <constructor-arg value="/WEB-INF/wsdl/SectraBookingService.wsdl"/>
		<!-- property name="schema" ref="schema" />
		<property name="portTypeName" value="UnitRequestSOAP" />
		<property name="locationUri" value="/booking/" />
		<property name="targetNamespace" value="http://tempuri.org/" / -->
	</bean>

	<bean id="SectraBookingXMLSchema" class="org.springframework.xml.xsd.SimpleXsdSchema">
		<property name="xsd" value="/WEB-INF/wsdl/SectraBookingXMLSchema.xsd" />
	</bean>

</beans>