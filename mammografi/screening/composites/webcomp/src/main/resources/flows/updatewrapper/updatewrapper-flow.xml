<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <input name="state" />
    <input name="booking" />
    
    <subflow-state id="update" subflow="update">
        <input name="state" value="state" />
        <input name="booking" value="booking" />
        <transition on="cancel" to="cancel"/>
        <transition on="ok" to="showConfirmation"/>
    </subflow-state>

    <view-state id="showConfirmation" view="/flows/updatewrapper/showUpdateConfirmation.xhtml">
        <on-render >
            <evaluate expression="bookingFacade.getBookingTime(state)" result="flowScope.booking" /> 
        </on-render>    
    </view-state>

    <end-state id="cancel"/>
    <end-state id="logout"/>
    
    <global-transitions>
        <transition on="logout" history="invalidate" to="logout"/>
        <transition on-exception="java.lang.Error" history="invalidate" to="logout"/>
    </global-transitions>
    

</flow>